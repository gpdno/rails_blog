<% provide(:blog, "active") %>
<% provide(:users, "active") %>

<div class="container custom-blog-container">
  
<%= render 'shared/blog_header' %>

<h2 align="center">All Bloggers</h2>
  <div align="center">
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title">
            <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <% if logged_in? && current_user.admin? %>
                <%= link_to "Delete User", user_path(user), method:  :delete, data: {confirm: "Are you sure" } %>
              <% end %>
            </li>
            <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          </div>
        </div>
      </ul>
    <% end %>

</div><!-- /.container -->