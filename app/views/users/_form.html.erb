<div class="custom-form">
  <%= render 'shared/errors', obj: @user %>
  <div class="row">
    <div class="col col-xs-12">
      <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :username %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: 'form-control', placeholder: 'min 5 charactures', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :email %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'email@example.com', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :password %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: 'min 10 charactures', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
          <%= link_to 'Cancel', root_path, class: 'btn btn-warning' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>