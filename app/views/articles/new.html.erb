<%= render 'shared/errors', obj: @article %>

<div class="container">
  <h3>Create a new post</h3><hr>
  <%= form_for @article do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, size: "60x12" %>
    </p>
    <p><%= f.submit %></p>
  <% end %>
</div>
