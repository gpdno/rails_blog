<div class="custom-form">
  <%= render 'shared/errors', obj: @article %>
  <div class="row">
    <div class="col col-xs-12">
      <%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Articile Title', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control', placeholder: 'This is my blog post...', size: "60x10", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to 'Cancel', articles_path, class: 'btn btn-warning' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>